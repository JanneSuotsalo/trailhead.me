<div class="page full login">
  <a href="/" class="logo"></a>

  <form id="login" method="post" action="/register" class="modal" novalidate>
    <h2>Log In</h2>

    <label for="email">Email</label>
    <input id="email" type="email" name="email" placeholder="example@example.com" />

    <label for="password">Password</label>
    <input id="password" type="password" name="password" placeholder="••••••••" />

    <div id="error" style="display: none;"></div>

    <div class="sink">
      <button type="submit">Log In</button>
      <a href="/register" class="button secondary">Register</a>
    </div>
  </form>

  <div class="background"></div>
</div>

{{#section 'style'}}
<link href="/static/css/login.css" rel="stylesheet" />
{{/section}}

{{#section 'script'}}
<script src="/static/js/login.js"></script>
{{/section}}